<div class="navbar navbar-expand-sm navbar-lewagon">
  <%= link_to "/", class: "navbar-brand d-flex just-content-between" do %>
     <%#= cl_image_tag "https://res.cloudinary.com/yaelmontufar/image/upload/v1584035528/logo/streemer_so6wrs.png" , height: 30, width: 40, crop: :fill %>
    <h4 class= "company">streemer</h4>
  <% end %>


  <% if  current_user %>
    <button class="btn" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

      <span class="avatar">
        <%= render "users/avatar", user: current_user, size: 35 %>
      </span>
    </button>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
      <% if current_user.performer? %>
        <%= link_to "My profile", performer_path(current_user), class: "dropdown-item" %>
        <%= link_to "Get Streemer Code", new_performer_tip_path(current_user), class: "dropdown-item" %>
      <% elsif %>
         <%= link_to "Become a performer", new_performer_profile_path, class: "dropdown-item" %>
      <% end %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
    </div>
  <% else %>
    <div>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
  <% end %>


</div>

