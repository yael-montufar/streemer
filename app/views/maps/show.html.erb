<div id="carousel">
  <% @events.each do |event| %>
    <div class="carousel-item-map" data-id="<%= event.id %>" style="background-color: #a00">
      <%= event.id %>
    </div>
  <% end %>
</div>
<div
  id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
