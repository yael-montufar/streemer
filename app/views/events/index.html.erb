<h1>List of Events</h1>
<ul>
  <% @events.each do |event| %>
  <li><%= link_to event.name , event_path(event) %> - <%= event.description %></li>
  <% end %>
</ul>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
